<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="my.music.musicdb.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Base.Theme.AppCompat"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@android:color/holo_blue_bright"
        android:gravity="fill_vertical|fill_horizontal"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_height="2dip"
            android:background="@android:color/black" />

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allAlbums"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@color/Albums"
                android:gravity="center_vertical"
                android:padding="3dip"
                android:text="@string/AllAlbums"
                android:textAlignment="center"
                android:textSize="24dp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="@android:color/black" />

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allArtists"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@color/Artists"
                android:gravity="center_vertical"
                android:padding="3dip"
                android:text="@string/AllArtists"
                android:textAlignment="center"
                android:textSize="24dp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="@android:color/black" />

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allGenres"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@color/Genres"
                android:gravity="center_vertical"
                android:padding="3dip"
                android:text="@string/AllGenres"
                android:textAlignment="center"
                android:textSize="24dp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="@android:color/black" />

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allSongs"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@color/Songs"
                android:gravity="center_vertical"
                android:padding="3dip"
                android:text="@string/AllSongs"
                android:textAlignment="center"
                android:textSize="24dp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="@android:color/black" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>