<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="my.music.musicdb.AddArtistActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@color/Artists"
        android:gravity="center_horizontal"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/l_edit_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:text="@string/artistName"
                android:textAlignment="textEnd" />

            <EditText
                android:id="@+id/tf_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:ems="10"
                android:inputType="text" />

        </TableRow>
        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/l_edit_release"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/artistPicture"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:textAlignment="textEnd" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/btnImage" />

        </TableRow>
        <TableRow android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_span="2"
                android:scaleType="fitXY" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/l_edit_language"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/artistCountry"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:textAlignment="textEnd" />

            <Spinner
                android:id="@+id/s_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:entries="@array/country_names" />

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_span="2"
                android:text="@string/btnSave" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>